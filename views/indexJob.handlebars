<head>
    <link rel="stylesheet" href="/css/indexJob.css">
</head>

<main>
        <section class="conteiner1">
            <h3 class="fisrt__section--title">Vagas para Programadores e Desenvolvedores</h3>
            <form class="first__section--form" action="/jobs/searchTitle/?page=1" method="POST">
                <input class="main__search--input" type="text" name="title" placeholder="Pesquisar pelo titulo">
                <input type="hidden" name="_csrf" value={{csrfToken}}>
                <button type="submit" class="main__search--btn">Pesquisar</button>
            </form>
        </section>
        {{#if vaga}}
        {{#each vaga}}
        <section class="vagas">
            <a href="/job/{{_id}}">
                <h4 class="main__job--title" >{{title}}</h4>
            <ul class="main__job--itens">
                <li class="main__job--item">{{companyId.name}}</li>
                <li class="main__job--item">{{companyId.city}}</li>
                <li class="main__job--item">Tipo de empresa: {{companyId.type}}</li>
                <li class="main__job--item">Sal√°rio:{{salary}}</li>
            </ul>
            </a>   
            <p class="main__job--information">This website is not for real.</p>
            <hr class="main__job--line">
        </section>
        {{/each}}

        <section class="pagination"> 
            {{#if ask1}}
            <a href="/jobs/?page=1">1</a>
            {{/if}}
            <a href="/jobs/?page={{currentPage}}" class="active">{{currentPage}}</a>
            {{#if ask2}}
            <a href="/jobs/?page={{nextPage}}">{{nextPage}}</a>
            {{/if}}
            {{#if ask3}}
            <a href="/jobs/?page={{lastPage}}">{{lastPage}}</a>
            {{/if}}
        </section>

        {{else}}

        <section class="not_found">
        <h2>Nenhuma vaga encontrada!</h2>
        </section>
        {{/if}}
</main>

{{>end}}