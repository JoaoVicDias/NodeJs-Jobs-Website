<head>
    <link rel="stylesheet" href="/css/perfilUser.css">
</head>

<nav>
    <section class="conteiner1">
        <div class="conteiner1_1">
            <h2>{{session.user.name}}</h2>
            <p>{{session.user.email}}</p>
            <a href="/users/edit">Editar meu perfil</a>
        </div>
        <div class="conteiner1_2">
            <ul class="menu__perfil--itens">
                <li><a href="/users/perfil/?page=1">Perfil</a></li>
                <li><a href="/users/perfil/?page=1">Candidaturas</a></li>
                <li><a href="/users/logout">sair</a></li>
            </ul>
        </div>
    </section>
</nav>
<main>
    <section class="conteiner2">
        <div class="conteiner2_1">
            <h2>Candidaturas</h2>
            <p>Minhas Candidaturas:</p>
        </div>
        <hr>
        {{#if job}}
        {{#each job}}
        <div class="candidaturas">
            <a href="/job/{{jobId}}">
            <h4>{{title}}</h4>
            <form action="/users/delete" method="POST">
                <input type="hidden" name="id" value={{jobId}}>
                <input type="hidden" name="_csrf" value={{../csrfToken}}>
                <button type="submit">Deletar</button>
            </form>
            <ul>
                <li>{{name}}</li>
                <li>{{city}}</li>
                <li>Tipo de empresa:{{type}}</li><br>
                <li>Salário: {{salary}}</li>
            </ul>
            <h6 class="job__confirmation">Candidatura enviada!</h6>
            <p>This website is not for real.</p></a>
        </div>
            <hr>
    </section>
        {{/each}}

    <section class="pagination"> 
        {{#if ask1}}
        <a href="/users/perfil/?page=1">1</a>
        {{/if}}
        <a href="/users/perfil/?page={{currentPage}}" class="active">{{currentPage}}</a>
        {{#if ask2}}
        <a href="/users/perfil/?page={{nextPage}}">{{nextPage}}</a>
        {{/if}}
        {{#if ask3}}
        <a href="/users/perfil/?page={{lastPage}}">{{lastPage}}</a>
        {{/if}}
    </section>
    {{else}}
        <div> 
            <h6>Você não possui nenhuma Candidatura!</h6>
        </div>
      {{/if}}
</main>

